<h1>Log in as a Buyer</h1>

<%= form_tag '/retailors/buyer_login/check' do%>
	<p><%=label_tag('Username: ')%><%=text_field_tag(:username)%></p>
	<p><%=label_tag('Password: ')%><%=password_field_tag(:password)%></p>
	<p><%=submit_tag("login")%></p>
<%end%>

<p><%= link_to 'Go back to Welcome Page', '/retailors' %></p>
