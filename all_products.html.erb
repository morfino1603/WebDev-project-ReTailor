<h1>All Products</h1>

<table>
  <thead>
    <tr>
      <th>Product name</th>
      <th>Product description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product.each do |product| %>
      <tr>
        <td><%= link_to "#{product.product_name}", product %></td>
        <td><%= product.product_description %></td>
        <td><%= product.price %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back to your Profile', tailor_path(@tailor) %> 


