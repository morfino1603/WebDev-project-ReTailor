<h1>Listing Tailors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Contact Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tailor.each do |tailor| %>
      <tr>
        <td><%= tailor.tailor_name %></td>
        <td><%= tailor.tailor_address %></td>
        <td><%= tailor.tailor_contact %></td>
		<td><%= tailor.tailor_username %></td>
		<td><%= tailor.tailor_password %></td>
        <td><%= link_to 'Show', tailor_path(tailor) %></td>
		<td><%= link_to 'Delete', tailor_path(tailor), method: :delete, data: { confirm: 'Are you sure?' } %></td>
	  </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tailor', new_tailor_path %>
