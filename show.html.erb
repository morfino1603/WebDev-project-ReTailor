<h1><%= @tailor.tailor_name %></h2>
<h3><%= @tailor.tailor_address %></h3>
<h3><%= @tailor.tailor_contact %></h3>

<h2>List of Products</h2>
<%= link_to 'See All Products', "/tailors/#{@tailor.id}/all_products" %>


<table>
  <thead>
    <tr>
      <th>Product name</th>
      <th>Product description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product.each do |product| %>
      <tr>
        <td><%= link_to "#{product.product_name}", "/tailors/#{@tailor.id}/product/#{product.id}" %></td>
        <td><%= product.product_description %></td>
        <td><%= product.price %></td>
		<td><%= link_to 'Edit', edit_tailor_product_path(@tailor, product.id) %></td> 
		<td><%= link_to 'Delete', "/tailors/#{@tailor.id}/products/#{product.id}", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br><%= link_to 'Add Product', new_tailor_product_path(@tailor) %><br>
<%= link_to 'Logout', retailors_path %>



